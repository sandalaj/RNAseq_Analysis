#Import required packages

import pandas as pd  
import numpy as np  
import matplotlib.pyplot as plt  
import seaborn as seabornInstance 
from sklearn.model_selection import train_test_split 
from sklearn.linear_model import LinearRegression
from sklearn import metrics
%matplotlib inline

## Don't have seaborn or matplotlib as dependencies in environment; need to install -  can install in terminal, but best to modify environment so you don't need to re-install next time

##Once dependencies are installed, re-run to import

##To read in data:

dataset = pd.read_csv('regrex1.csv')


##To plot the scatterplot:

dataset.plot(x='x', y='y', style='o')  
plt.title('Linear Model')  
plt.xlabel('x')  
plt.ylabel('y')  
plt.show()


##To divide the data into 'attributes' and 'labels':

x = dataset['x'].values.reshape(-1,1)
y = dataset['y'].values.reshape(-1,1)


##To fit the regression:

regressor = LinearRegression()  
regressor.fit(x, y)


##To make predictions on the test data:

y_pred = regressor.predict(x)


##To plot the scatterplot with the linear model:

plt.scatter(x, y,  color='gray')
plt.plot(x, y_pred, color='red', linewidth=2)
plt.show()



